@model IEnumerable<DotNetSchool.Models.Student>

@{
    ViewData["Title"] = "Alunos";
}

<h1 class="title-top">Listagem de Alunos</h1>

<button type="button" class="btn btn-primary">
    <a class="create-btn" asp-action="Create">Novo Aluno</a>
</button>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuardianName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.GuardianName)
            <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
